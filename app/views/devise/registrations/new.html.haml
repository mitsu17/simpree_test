.sign-up__container
  .sign-up__container--left
    .logo__area
      = image_tag('simpree_logo_2_20200803.png', class: 'logo__image')
    .text__area  
      %h2 Welcome!<br>Create New Account
  .sign-up__container--right
    %h2.sign-up__text
      サインアップ
    .sign-up__text__border

    .form__contents
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :nickname, class: "name-text"
          %br/
          = f.text_field :nickname, placeholder: "ニックネーム", autofocus: true, class: "text-box"
        .field
          = f.label :email, class: "name-text"
          %br/
          = f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "text-box"
        .field
          = f.label :password, class: "name-text"
          - if @minimum_password_length
            %em.name-text
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, placeholder: "パスワード(6文字以上)", autocomplete: "new-password", class: "text-box"
        .field
          = f.label :password_confirmation, class: "name-text"
          %br/
          = f.password_field :password_confirmation, placeholder: "パスワード確認用",autocomplete: "new-password", class: "text-box__third"
        .select-actions
          = f.submit "サインアップ", class: "sign-up-btn"
          %p /  
          = render "devise/shared/links"
