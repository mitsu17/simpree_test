<div class="detail__post">
  <div class="detail__post__clip">
    <%= video_tag(url_for(@post.clip), controls:'') %>
  </div>
  <div class="detail__post__title">
    <%= @post.title %>
  </div>
  <div class="detail__post__text">
    <%= simple_format @post.text %>
  </div>
  <div class="transition__btn">
    <%= link_to "Edit", class: "transition__btn__edit", users_path %>
    <%= link_to "Delete", class: "transition__btn__delete", users_path %>
  </div>
</div>



%div
  = video_tag(url_for(@post.clip), style:'width:300px; height: auto;', controls:'')


.postTitle
  = @post.title
.postText
  = simple_format @post.text







  %main
  .grid
    - @posts.each do |post|
      .grid__item
        = link_to video_tag(url_for(post.clip), class: 'grid__item__image'), "/posts/#{post.id}", method: :get
        %h3= post.title 
        %p= simple_format(post.text)
        .grid__item__menuBtn
          =link_to image_tag('menu_icon_4.png', class: 'grid__item__menuBtn__image'), root_path
