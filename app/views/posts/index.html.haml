%body
  %header
    .header__logo
      = link_to image_tag('simpree_logo_2_20200803.png', class: 'header__logo__image'), root_path
  %main
    .grid
      - @posts.each do |post|
        .grid__item
          = video_tag(url_for(post.clip), class: 'grid__item__image')
          %h3= post.title 
          %p= post.text
          .grid__item__menuBtn
            = image_tag 'menu_icon_4.png', class: 'grid__item__menuBtn__image'

